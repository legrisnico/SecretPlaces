<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/popup_picture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/popup_txt_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/popup_picture"
        android:text="TextView" />

    <TextView
        android:id="@+id/popup_txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/popup_txt_distance"
        android:layout_below="@+id/popup_txt_distance"
        android:text="TextView" 
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/popup_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/popup_txt_description"
        android:background="@drawable/custom_btn"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Fermer"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:id="@+id/popup_btn_show_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/popup_txt_description"
        android:layout_alignTop="@+id/popup_btn_close"
        android:background="@drawable/bird"/>
 
</RelativeLayout>